<project name="config" default="compile" basedir=".">

	<!-- set global properties for this build -->
	<loadproperties srcFile="${basedir}/properties/build.all.properties" />
	<loadproperties srcFile="${basedir}/properties/build.${os.name}.properties" />
	
	<include file="${ant.utilities.xml.file}" />
	<include file="${ant.ecllipse.xml.file}" />
	
	<target name="ecllipse" description="--> generate ecllipse project files">
		<antcall taget="ecllipse.project" />
		<antcall target="ecllipse.classPath">
			<param name="${classpath.includeSource.parm}" value="false" />
		</antcall>
	</target>

	<!-- targets for building the ecllipse project need to handle both windows and others -->

	<!-- ================================= 
	          target: resolve              
	   ================================= -->

	<target name="init">
		<!-- Create the time stamp -->
		<tstamp />
		<!-- Create the build directory structure used by compile -->
		<mkdir dir="${build}" />
	</target>

	<target name="compile" depends="init" description="--> compile the source ">
		<!-- Compile the java code from ${src} into ${build} -->
		<javac srcdir="${src}" destdir="${build}" includeJavaRuntime="false" includeantruntime="false">
			<include name="com/**" />
		</javac>
	</target>

</project>