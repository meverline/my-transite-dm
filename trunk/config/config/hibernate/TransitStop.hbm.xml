<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="me.transit.database" >

	 <typedef name="LocationTypeUserType" class="org.hibernate.type.EnumType" >
         <param name="enumClass">me.transit.database.TransitStop$LocationType</param>
         <param name="type">12</param>
	 </typedef>
	  
     <typedef name="RouteTypeUserType" class="org.hibernate.type.EnumType" >
         <param name="enumClass">me.transit.database.Route$RouteType</param>
	 </typedef>
	 
	 <typedef name="RouteUserType" class="me.database.userTypes.CSVClobUsetDataType" >
	       <param name="csvClass">me.transit.database.impl.RouteStopDataImpl</param>
	 </typedef>
	  
     <class name="TransitStop"  table="tran_stop" >

          <id name="UUID" unsaved-value="-1">
  			<column name="STOP_UUID" not-null="true"/>
			<generator class="native"/>
		  </id>
		  <discriminator column="TRANSIT_STOP_TYPE" type="string"/>
		  <property name="id" column="ID" not-null="true" />
		  <property name="code" column="CODE" />
		  <property name="name" column="NAME"  not-null="true" />
		  <property name="desc" column="DESCRIPTION" />
		  
		  <property name="location" column="LOCATION" 
		  			type="org.hibernate.spatial.GeometryType"  not-null="true" />
		  			
		  <property name="zoneId" column="ZONE"  />
		  <property name="url" column="URL"  />
		  
		  <property name="locationType" column="TYPE" type="LocationTypeUserType" 
		  			not-null="true" />
		  			
		  <property name="parentStation" column="PARENT_STATION" />
		  <property name="routes" column="ROUTES"  length="16777215" type="RouteUserType"/>   
		  <property name="version" column="VERSION"  /> 
		  
		  <many-to-one name="agency"  
		  			   class="Agency" 
		  			   column="AGENCY_UUID" 
		  			   not-null="true" 
		  			   outer-join="true" />
		  			   
		  <subclass name="me.transit.database.impl.TransitStopImpl" discriminator-value="TransitStopImpl"/>
		  		  
	  </class>
	  
</hibernate-mapping>