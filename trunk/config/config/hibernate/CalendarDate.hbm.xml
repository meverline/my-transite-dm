<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="me.transit.database" >

      <typedef name="ExceptionTypeUserType" class="org.hibernate.type.EnumType" >
          <param name="enumClass">me.transit.database.CalendarDate$ExceptionType</param>
          <param name="type">12</param>
	  </typedef>
	  
      <class name="CalendarDate"  table="tran_calendar_date" >

          <id name="UUID" unsaved-value="-1">
  			<column name="CALENDAR_DATE_UUID" not-null="true"/>
			<generator class="native"/>
		  </id>
		  <discriminator column="CALENDARDATE_TYPE" type="string"/>
		  <property name="id" column="ID" not-null="true" />
		  <property name="date" column="DATE" not-null="true" type="java.util.Calendar" />
		  <property name="exceptionType" column="EXCCEPTOIN_TYPE"  
		  			type="ExceptionTypeUserType" not-null="true" />
		  <property name="version" column="VERSION"  />
		  			
		  <many-to-one name="agency"  
		  			   class="Agency" 
		  			   column="AGENCY_UUID" 
		  			   not-null="true" 
		  			   outer-join="true" />
		  			   
 		  <subclass name="me.transit.database.impl.CalendarDateImpl" discriminator-value="CalendarDateImpl"/>		 
		  
      </class>
 
 </hibernate-mapping>