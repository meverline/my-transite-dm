<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="me.math.grid.tiled" >

	  <class name="me.math.grid.tiled.TileFragament"  table="hmt_tileFragment" >
	  
	      <id name="UUID" unsaved-value="-1">
  			<column name="FRAGMENT_UUID" not-null="true"/>
			<generator class="native"/>
		  </id>
		  		  
		  <property name="heatMapUUID" column="heatMapUUID" />
		  <property name="heatMapName" column="heatMapName" />
		  <property name="index" column="tileIndex" />
		  <property name="boundingBox" column="MBR" type="org.hibernate.spatial.GeometryType"  />
 
	  </class>
</hibernate-mapping>