<?xml version="1.0"?>

<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping"
			xsi:schemaLocation="/org/hibernate/hibernate-mapping-4.0.xsd"
			xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		package="me.transit.database" >
	  
	  <typedef name="StopTimeUserType" class="me.database.userTypes.CSVClobUsetDataType" >
          <param name="csvClass">me.transit.database.impl.StopTimeImpl</param>
	  </typedef>
	  
     <class name="Trip"  table="tran_trip" >

          <id name="UUID" unsaved-value="-1">
  			<column name="TRIP_UUID" not-null="true"/>
			<generator class="native"/>
		  </id>
		  <discriminator column="TRIP_TYPE" type="string"/>
		  <property name="headSign" column="HEAD_SIGN"  /> 
	      <property name="shortName" column="NAME" />
		  <property name="directionId" column="DIRECTION" not-null="true" >
		     <type name="org.hibernate.type.EnumType">
                <param name="enumClass">me.transit.database.Trip$DirectionType</param>
             </type>
           </property>
		       
		  <many-to-one name="shape"  
		  			   class="RouteGeometry" 
		  			   outer-join="true"/>
		  					  			   
		  <many-to-one name="service"  
		               class="ServiceDate" 
		               column="SERVICE_DATE_UUID" 
		               not-null="true" 
		               outer-join="true" />
		 
		  <property name="stopTimes" column="STOP_TIMES"  length="16777215" type="StopTimeUserType"/>
		  <property name="version" column="VERSION"  />
		      
 		  <subclass name="me.transit.database.impl.TripImpl" discriminator-value="TripImpl"/>		          
                		  		   
	  </class>	  
	      
</hibernate-mapping>