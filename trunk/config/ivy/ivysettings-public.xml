<ivysettings>

	<resolvers>

		<!-- //////////////////////////////////////////////////////////////////////////////////// 
			ibiblio repositories, these are repository that are gotten to via http and 
			are typically maven repositories the two listed here are the jboss and the 
			default maven centeral repository. 
			centeral repository: http://search.maven.org/#browse
			jboss: http://community.jboss.org/wiki/MavenRepository (setup info)
		//////////////////////////////////////////////////////////////////////////////////// -->

		<ibiblio name="jboss" m2compatible="true" root="http://repository.jboss.com/maven2/" />
		<ibiblio name="ibiblio-maven2" m2compatible="true" root="http://repo.maven.apache.org/maven2" />
		<ibiblio name="Hibernate-Spatial" m2compatible="true" root="http://www.hibernatespatial.org/repository/" />
		<ibiblio name="OSGEO-GeoTools" m2compatible="true" root="http://download.osgeo.org/webdav/geotools/" />

		<!-- //////////////////////////////////////////////////////////////////////////////////// 
			ivy package repository this repository type is typically taking bundles and 
			zip files and unpackaging the files. This is repository is vy roundup found 
			at: http://code.google.com/p/ivyroundup/ this is repository is managed. 
		//////////////////////////////////////////////////////////////////////////////////// -->
		
		<packager name="roundup" buildRoot="${user.home}/.ivy2/packager/build"
			resourceCache="${user.home}/.ivy2/packager/cache">
			<ivy pattern="http://ivyroundup.googlecode.com/svn/trunk/repo/modules/[organisation]/[module]/[revision]/ivy.xml" />
			<artifact pattern="http://ivyroundup.googlecode.com/svn/trunk/repo/modules/[organisation]/[module]/[revision]/packager.xml" />
		</packager>

		<!-- //////////////////////////////////////////////////////////////////////////////////// 
			SpringSource Enterprise Bundle maven repository spcefication the repository 
			is found at: https://ebr.springsource.com/repository/app/ this is another 
			managaed repository. 
		//////////////////////////////////////////////////////////////////////////////////// -->
		
		<url name="com.springsource.repository.bundles.release">
			<ivy pattern="http://repository.springsource.com/ivy/bundles/release/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]" />
			<artifact pattern="http://repository.springsource.com/ivy/bundles/release/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]" />
		</url>
		<url name="com.springsource.repository.bundles.external">
			<ivy pattern="http://repository.springsource.com/ivy/bundles/external/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]" />
			<artifact pattern="http://repository.springsource.com/ivy/bundles/external/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]" />
		</url>

		<!-- The chain which speciftys how the spring source repository is searched 
			for artifacts. -->
		<chain name="spring">
			<resolver ref="com.springsource.repository.bundles.release" />
			<resolver ref="com.springsource.repository.bundles.external" />
		</chain>

		<!-- //////////////////////////////////////////////////////////////////////////////////// 
			The primary or main chain. A chain specifies in what order a set of repositories 
			are searched for when resolving dependencies. In the chain the resolovers 
			are reference the repositries specfied above. 
	    //////////////////////////////////////////////////////////////////////////////////// -->
	    
		<chain name="main" dual="true">
			<resolver ref="roundup" />
			<resolver ref="jboss" />
			<resolver ref="spring" />
			<resolver ref="ibiblio-maven2" />
			<resolver ref="Hibernate-Spatial" />
			<resolver ref="OSGEO-GeoTools" />
		</chain>

		<!-- the default chain used by ivy -->
		
		<chain name="default" returnFirst="true">
			<resolver ref="main" />
		</chain>

	</resolvers>
</ivysettings>