<?xml version="1.0"?>

<hibernate-mapping  xmlns="http://www.hibernate.org/xsd/hibernate-mapping"
		xsi:schemaLocation="org/hibernate/hibernate-mapping-4.0.xsd"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		package="me.transit.database" >

	  <typedef name="ServiceDateUserType" class="me.database.userTypes.GenericEnumUserType" >
	       <param name="enumClass">me.transit.database.ServiceDate$ServiceDays</param>
	  </typedef>
 	  
     <class name="ServiceDate"  table="tran_service_date" >

          <id name="UUID" unsaved-value="-1">
  			<column name="SERVICE_DATE_UUID" not-null="true"/>
			<generator class="native"/>
		  </id>
		  <discriminator column="SERVICE_DATE_TYPE" type="string"/>
		  <property name="id" column="ID" not-null="true" /> 
		  
	      <property name="startDate" column="START_DATE" not-null="true" type="java.util.Calendar" />
		  <property name="endDate" column="END_DATE" not-null="true" type="java.util.Calendar" />
		  
		  <property name="serviceDayFlag" column="SERVICE_DAYS" not-null="true" /> 
		  
		  <property name="service" column="SERVICE_TYPE" not-null="true" >
		  	 <type name="org.hibernate.type.EnumType">
                <param name="enumClass">me.transit.database.ServiceDate$ServiceDays</param>
             </type>
          </property>
		  <property name="version" column="VERSION"  />
		  			
		  <many-to-one name="agency"  
		  			   class="Agency" 
		  			   column="AGENCY_UUID" 
		  			   not-null="true" 
		  			   outer-join="true" />
		  			   
		  <subclass name="me.transit.database.impl.ServiceDateImpl" discriminator-value="ServiceDateImpl"/>
		  
	  </class>	
	  
</hibernate-mapping>
	  